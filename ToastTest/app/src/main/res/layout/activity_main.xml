<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.toasttest.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Center"
        android:id="@+id/bt_center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="showToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top"
        android:id="@+id/bt_top"
        android:layout_alignBottom="@+id/bt_center"
        android:layout_toEndOf="@+id/bt_center"
        android:onClick="showToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bottom"
        android:id="@+id/bt_bottom"
        android:layout_alignBottom="@+id/bt_top"
        android:layout_toEndOf="@+id/bt_top"
        android:onClick="showToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:id="@+id/bt_left"
        android:layout_below="@+id/bt_center"
        android:layout_toStartOf="@+id/bt_top"
        android:onClick="showToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"
        android:id="@+id/bt_right"
        android:layout_alignBottom="@+id/bt_left"
        android:layout_toEndOf="@+id/bt_left"
        android:onClick="showToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Right"
        android:id="@+id/bt_top_right"
        android:layout_below="@+id/bt_bottom"
        android:layout_toEndOf="@+id/bt_top"
        android:onClick="showToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Left"
        android:id="@+id/bt_top_left"
        android:layout_below="@+id/bt_left"
        android:layout_toStartOf="@+id/bt_right"
        android:onClick="showToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bottom Right"
        android:id="@+id/bt_bottom_right"
        android:layout_below="@+id/bt_right"
        android:layout_alignStart="@+id/bt_right"
        android:onClick="showToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bottom Left"
        android:id="@+id/bt_bottom_left"
        android:layout_below="@+id/bt_top_right"
        android:layout_toEndOf="@+id/bt_bottom_right"
        android:onClick="showToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Center 100 200"
        android:id="@+id/bt_center_100_200"
        android:layout_below="@+id/bt_top_left"
        android:layout_alignParentStart="true"
        android:onClick="showToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Center 100 -200"
        android:id="@+id/bt_center_100__200"
        android:layout_below="@+id/bt_bottom_right"
        android:layout_alignEnd="@+id/bt_top_right"
        android:onClick="showToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Custom Toast"
        android:id="@+id/bt_custom_toast"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="showToast"/>
</RelativeLayout>
