<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kartik.sampleapps.customcheckboxtest.MainActivity">

    <CheckBox
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="267dp"
        android:layout_marginBottom="457dp"
        android:id="@+id/hello_cb"
        android:button="@null"
        android:background="@drawable/custom_checkbox"/>

    <CheckBox
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/hello_cb"
        android:layout_marginTop="31dp"
        android:id="@+id/hi_cb"
        android:button="@null"
        android:background="@drawable/custom_checkbox"/>

    <TextView
        android:text="Hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hello_cb"
        android:layout_toEndOf="@+id/hi_cb"
        android:id="@+id/hello_tv"
        android:textColor="@color/black"/>

    <TextView
        android:text="Hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hi_tv"
        android:layout_alignBaseline="@+id/hi_cb"
        android:layout_alignBottom="@+id/hi_cb"
        android:layout_toEndOf="@+id/hi_cb"
        android:textColor="@color/black"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hi_cb"
        android:layout_alignStart="@+id/hi_cb"
        android:layout_marginTop="19dp"
        android:id="@+id/fine_cb"
        android:button="@drawable/custom_checkbox_2"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fine_cb"
        android:layout_alignStart="@+id/fine_cb"
        android:layout_marginTop="19dp"
        android:id="@+id/what_cb"
        android:button="@drawable/custom_checkbox_2"/>

    <TextView
        android:text="Fine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fine_cb"
        android:layout_toEndOf="@+id/fine_cb"
        android:id="@+id/fine_tv"
        android:textColor="@color/black"/>

    <TextView
        android:text="What"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/what_cb"
        android:layout_toEndOf="@+id/what_cb"
        android:id="@+id/what_tv"
        android:textColor="@color/black"/>

</RelativeLayout>
