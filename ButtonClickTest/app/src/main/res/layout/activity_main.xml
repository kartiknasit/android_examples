<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.buttonclicktest.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interface Button"
        android:id="@+id/bt_interface_method1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anonymous Button"
        android:id="@+id/bt_anonymous"
        android:layout_alignTop="@+id/bt_interface_method1"
        android:layout_toEndOf="@+id/bt_interface_method1"
        android:layout_marginStart="36dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XML Button"
        android:id="@+id/bt_xml1"
        android:onClick="onClickForXMLButton"
        android:layout_above="@+id/textView"
        android:layout_alignEnd="@+id/bt_interface_method1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Empty"
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/bt_interface_method1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Interface Button"
        android:id="@+id/bt_interface_method2"
        android:layout_below="@+id/bt_anonymous"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second XML Button"
        android:id="@+id/bt_xml2"
        android:layout_above="@+id/textView"
        android:layout_toEndOf="@+id/bt_xml1" />
</RelativeLayout>
